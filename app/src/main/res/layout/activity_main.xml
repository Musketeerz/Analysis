<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.praveen.myapplication.MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/h">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:orientation="horizontal"
        android:layout_weight="0.02">



        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="320dp"
            android:weightSum="1"
            android:gravity="center">



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="2dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                app:cardElevation="3dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:foregroundGravity="center"
                    android:visibility="visible">

                </com.github.mikephil.charting.charts.PieChart>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart"
                    android:layout_width="480dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:visibility="invisible">

                </com.github.mikephil.charting.charts.LineChart>

            </android.support.v7.widget.CardView>

        </RelativeLayout>


        <android.support.v7.widget.CardView

            android:layout_marginTop="10dp"
            android:layout_width="450dp"
            android:layout_height="310dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="3dp"
            android:layout_marginStart="5dp">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:scrollbars="none">

            <GridLayout
            android:layout_width="400dp"
            android:layout_height="290dp"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp">

            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="60dp"
                android:id="@+id/card1">

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:src="@drawable/water"/>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="60dp"
                android:id="@+id/card2">
                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:src="@drawable/iron"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="60dp"
                android:id="@+id/card3">

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:src="@drawable/streetlamps"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardCornerRadius="60dp"
                android:layout_marginTop="10dp"
                android:id="@+id/card4">

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lightbulb"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardCornerRadius="60dp"

                android:layout_marginTop="10dp"
                android:id="@+id/card5">

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fan"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardCornerRadius="60dp"
                android:layout_marginTop="10dp"
                android:id="@+id/card6">

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wash"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="60dp"
                android:id="@+id/card7">

                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:src="@drawable/waterheater"/>

            </android.support.v7.widget.CardView>

        </GridLayout>

        </ScrollView>
        </android.support.v7.widget.CardView>

       </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/rightcard"
            android:layout_width="492dp"
            android:layout_height="200dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="3dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:text="75 Kw"
                android:textSize="30sp"
                android:textStyle="bold">

            </TextView>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card9"
            android:layout_width="225dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="65Kw"
                android:textSize="70dp"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="ECO USAGE"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card8"
            android:layout_width="225dp"
            android:layout_height="200dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10"
                android:textSize="70dp"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="ACTIVE DEVICES "
                android:textSize="25dp"
                android:textStyle="bold"

                />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>